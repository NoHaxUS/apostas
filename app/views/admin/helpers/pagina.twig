{% extends 'admin/layout.twig' %}

{% block main %}

    <form class="admpage-form panel panel-default">
        <div class="panel-body p-b-10">
            <div class="row">

                {% if vars['_titulo'] %}
                    <div class="form-group col-xs-12">
                        <label>Título</label>
                        <input type="text" name="title" class="form-control" required=""/>
                    </div>
                {% endif %}

                {% if vars['_metatags'] %}
                    <div class="form-group col-xs-6">
                        <label>Descrição</label>
                        <input type="text" name="descricao" class="form-control" required=""/>
                    </div>
                    <div class="form-group col-xs-6">
                        <label>Keywords</label>
                        <input type="text" name="keywords" class="form-control"/>
                    </div>
                {% endif %}

                {% if vars['_texto'] %}
                    <div class="form-group col-xs-12">
                        <label>Texto</label>
                        <textarea name="texto" class="form-control" data-ckeditor></textarea>
                    </div>
                {% endif %}

            </div>
        </div>
        <div class="panel-footer text-right">

            <div class="pull-left">
                {% if vars['_galeria'] %}
                    <button type="button" class="btn btn-success"
                            onclick="galeria('{{ v.getTable() }}', {{ v.getId() }}, 'Galeria de Imagens');">
                        <i class="fa fa-image"></i> Imagens
                    </button>
                {% endif %}
            </div>

            <button type="submit" class="btn btn-info">
                <i class="fa fa-save"></i> Salvar
            </button>

        </div>
    </form>

{% endblock %}

{% block script %}

    <script>

        $('.admpage-form').adminPage({
            autoSearch: false,
            autoReset: false,
            alertSuccess: true,
            saveValues: {id: '{{ v.getId() }}', token: '{{ v.getToken() }}'}
        });

        $(window)
            .load(function () {
                $('.admpage-form')
                    .setValues({{ json(v) }});
            })

    </script>

{% endblock %}