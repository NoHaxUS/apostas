{% extends 'admin/layout.twig' %}

{% block main %}

    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">

                <div class="panel-heading clearfix">
                    <h4 class="panel-title">Busca</h4>
                </div>
                <form>
                    <div class="panel-body p-b-10">
                        <div class="row">
                            <div class="form-group col-md-3 col-sm-6 col-xs-12">
                                <label>Login</label>
                                <span class="pointer" data-toggle="popover" data-trigger="hover"
                                      data-content="Digite o login do usuário"
                                      data-original-title=""
                                      title="">[<i class="fa fa-question"></i>]</span>
                                <input type="text" class="form-control">
                            </div>
                            <div class="form-group col-md-3 col-sm-6 col-xs-12">
                                <label>Data de cadastro</label>
                                <span class="pointer" data-toggle="popover" data-trigger="hover"
                                      data-content="Selecione ou digite a data de cadastro."
                                      data-original-title=""
                                      title="">[<i class="fa fa-question"></i>]</span>
                                <input type="date" class="form-control mask-date">
                            </div>
                            <div class="form-group col-md-2 col-sm-6 col-xs-12">
                                <label>Status</label>
                                <span class="pointer" data-toggle="popover" data-trigger="hover"
                                      data-content="Selecione o status"
                                      data-original-title=""
                                      title="">[<i class="fa fa-question"></i>]</span>
                                <select class="form-control">
                                    <option> -- Selecione --</option>
                                    <option value="1"> Ativo</option>
                                    <option value="0"> Inativo</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2 col-sm-6 col-xs-12">
                                <label>Nível</label>
                                <span class="pointer" data-toggle="popover" data-trigger="hover"
                                      data-content="Selecione um tipo de licença"
                                      data-original-title=""
                                      title="">[<i class="fa fa-question"></i>]</span>
                                <select class="form-control">
                                    <option> -- Selecione --</option>
                                    <option value="1"> Nível 1</option>
                                    <option value="2"> Nível 2</option>
                                    <option value="3"> Nível 3</option>
                                    <option value="4"> Nível 4</option>
                                    <option value="5"> Nível 5</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2 col-sm-6 col-xs-12">
                                <label>Licença</label>
                                <span class="pointer" data-toggle="popover" data-trigger="hover"
                                      data-content="Selecione um tipo de licença"
                                      data-original-title=""
                                      title="">[<i class="fa fa-question"></i>]</span>
                                <select class="form-control">
                                    <option> -- Selecione --</option>
                                    <option value="1"> Jogador</option>
                                    <option value="2"> Consultor</option>
                                    <option value="3"> Franqueado</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="text-right">
                            <button type="submit" class="btn btn-info">
                                <i class="fa fa-search"></i> Pesquisar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-xs-12">
            <div class="table-responive">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                    <tr>
                        <th width="20">Nível</th>
                        <th width="120">Login</th>
                        <th width="100">DT.cadastro</th>
                        <th width="60">Status</th>
                        <th width="60">Licença</th>
                        <th width="50">Email</th>
                        <th width="90">Telefone</th>
                        <th width="80">Cidade</th>
                        <th width="20">UF</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="text-center vertical-align">1</td>
                        <td class="vertical-align">Loginteste</td>
                        <td class="vertical-align">16/08/2017</td>
                        <td class="text-center vertical-align">Ativo</td>
                        <td class="vertical-align">Jogador</td>
                        <td class="vertical-align">email@example.com</td>
                        <td class="vertical-align">(87) 99999-9999</td>
                        <td class="vertical-align">Cidade Nome</td>
                        <td class="vertical-align text-center">PE</td>
                    </tr>
                    </tbody>
                    <tfoot>
                    <tr>
                        <th colspan="12">Exibindo de 1 até 5 de 5 registros</th>
                    </tr>
                    </tfoot>
                </table>
            </div>

        </div>

    </div>

{% endblock %}